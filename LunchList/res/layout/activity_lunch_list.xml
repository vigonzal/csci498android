<?xml version="1.0" encoding="utf-8"?>
<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@android:id/tabhost"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TabWidget
            android:id="@android:id/tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <ListView
                android:id="@+id/restaurants"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
			<ScrollView 
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content">
            <TableLayout
                android:id="@+id/details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="4dip"
                android:shrinkColumns="1"
                android:stretchColumns="1" >

                <TableRow>

                    <TextView android:text="@string/name" />

                    <EditText android:id="@+id/name"
                        android:hint="@string/name_field" />
                </TableRow>

                <TableRow>

                    <TextView android:text="@string/address" />

                    <EditText android:id="@+id/addr" 
                    	android:hint="@string/address_field"/>
                </TableRow>

                <TableRow>

                    <TextView android:text="@string/type" />

                    <RadioGroup android:id="@+id/types" >

                        <RadioButton
                            android:id="@+id/take_out"
                            android:checked="true"
                            android:text="@string/take_out" />

                        <RadioButton
                            android:id="@+id/sit_down"
                            android:text="@string/sit_down" />

                        <RadioButton
                            android:id="@+id/delivery"
                            android:text="@string/delivery" />
                    </RadioGroup>
                </TableRow><TableRow>

                    <TextView android:text="@string/note" />

                    <EditText
                        android:id="@+id/notes"
                        android:hint="@string/notes_sect"
                        android:gravity="top"
                        android:lines="2"
                        android:maxLines="2"
                        android:maxWidth="200sp"
                        android:scrollHorizontally="false"
                        android:singleLine="false" />
                </TableRow>
				<Button
                    android:id="@+id/save"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/save" />
            </TableLayout>
            </ScrollView>
        </FrameLayout>
    </LinearLayout>

</TabHost>